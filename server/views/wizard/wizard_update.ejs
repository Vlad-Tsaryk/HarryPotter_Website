<!DOCTYPE html>
<html>
<head>
    <%- include ("../header.ejs") %>
    <title>Create Magic School</title>
    <style>
        h1{
            font-family: Cambria;
            text-shadow: 2px 2px 4px #000000;
            color: #285f55;
        }
        input, select {
            background: none;
            border: none;
            outline: none;
            /*padding: 10px 20px;*/
            font-size: 16px;
            border-radius: 9999px;
            box-shadow: inset 1px 1px 4px rgb(40, 95, 85);
            color: #fff;
        }
        button {
            padding: 17px 40px;
            border-radius: 30px;
            border: 0;
            background-color: #52796f;
            box-shadow: rgb(0 0 0 / 5%) 0 0 8px;
            letter-spacing: 1.5px;
            text-transform: uppercase;
            font-size: 15px;
            transition: all .5s ease;
        }

        button:hover {
            letter-spacing: 3px;
            background-color: hsl(261deg 80% 48%);
            color: hsl(0, 0%, 100%);
            box-shadow: rgb(93 24 220) 0px 7px 29px 0px;
        }

        button:active {
            letter-spacing: 3px;
            background-color: hsl(261deg 80% 48%);
            color: hsl(0, 0%, 100%);
            box-shadow: rgb(93 24 220) 0px 0px 0px 0px;
            transform: translateY(10px);
            transition: 100ms;
        }
    </style>
</head>
<body>
<%- include ("../navigation.ejs") %>
<div class="container" style=" background-color: white; opacity: 75%; border-radius: 10px; margin-top: 60px; padding-bottom: 10px">
    <h1 class="text-center">Wizard Update</h1>
    <form method="post" action="/wizard/update/<%=wizard.id%>">
        <div class="mb-3">
            <label for="firstName" class="form-label">First name:</label>
            <input type="text" id="firstName"  class="form-control" name="firstName" value="<%=wizard.firstName%>" required>
        </div>
        <div class="mb-3">
            <label for="lastName" class="form-label">Last name:</label>
            <input type="text" id="lastName"  class="form-control" name="lastName" value="<%=wizard.lastName%>" required>
        </div>
        <div class="mb-3">
            <label for="dateOfBirth" class="form-label">Date of birth:</label>
            <input type="date" id="dateOfBirth" class="form-control" name="dateOfBirth" value="<%=wizard.dateOfBirth%>" required>
        </div>
        <div class="mb-3">
            <label for="bloodStatus" class="form-label">Blood status:</label>
            <select id="bloodStatus" name="bloodStatus" class="form-select" required>
                <option></option>
                <%
                let options = ["Half-blood","Pure-blood","Muggle-born","Squibs","Half-breed"]
                options.forEach(option => {
                %><option value="<%=option%>" <%if(option===wizard.bloodStatus){%>selected<%}%>><%=option%></option><%
                })
                %>
            </select>
        </div>
        <div class="mb-3">
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio"
                       name="gender" id="inlineRadio1" value="1" <%if(wizard.gender===true){%>checked<%}%>>
                <label class="form-check-label" for="inlineRadio1">Male</label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio"
                       name="gender" id="inlineRadio2" value="0" <%if(wizard.gender===false){%>checked<%}%>>
                <label class="form-check-label" for="inlineRadio2">Female</label>
            </div>
        </div>
        <div class="mb-3">
            <label for="faculty" class="form-label">Faculty:</label>
            <select id="faculty" name="faculty" class="form-select" required>
                <option></option>
                <%faculties.forEach(faculty =>{%>
                <option value="<%=faculty.id%>" <%if(wizard.faculty===faculty.id){%>selected<%}%>><%=faculty.name%></option>
                <% }); %>
            </select>
        </div>
        <button type="submit">Update</button>
    </form>
    <%- include ("../scripts.ejs") %>
</div>
</body>
</html>
