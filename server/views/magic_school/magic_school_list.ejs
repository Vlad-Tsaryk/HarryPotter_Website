<!DOCTYPE html>
<html>
<head>
    <%- include ("../header.ejs") %>
    <title>Magic School List</title>
    <style>
        h1{
            font-family: Cambria;
            text-shadow: 4px 2px 4px #000000;
            color: #18423b;
        }
        input{
            border: none;
            outline: none;
            font-size: 16px;
            box-shadow: inset 1px 1px 4px #18423b;
        }
        .btn-secondary {
            padding: 17px 40px;
            border-radius: 30px;
            border: 0;
            background-color: #52796f;
            box-shadow: rgb(0 0 0 / 5%) 0 0 8px;
            letter-spacing: 1.5px;
            text-transform: uppercase;
            font-size: 15px;
            transition: all .5s ease;
        }

        .btn-secondary:hover {
            letter-spacing: 3px;
            background-color: hsl(261deg 80% 48%);
            color: hsl(0, 0%, 100%);
            box-shadow: rgb(93 24 220) 0px 7px 29px 0px;
        }

        .btn-secondary:active {
            letter-spacing: 3px;
            background-color: hsl(261deg 80% 48%);
            color: hsl(0, 0%, 100%);
            box-shadow: rgb(93 24 220) 0px 0px 0px 0px;
            transform: translateY(10px);
            transition: 100ms;
        }
    </style>
</head>
<body>
<%- include ("../navigation.ejs") %>

<div class="container" style="max-width: 1100px; background-color: white; opacity: 75%; border-radius: 10px; margin-top: 60px; padding-bottom: 10px">
    <h1 class="text-center">Magic School List</h1>
    <table class="table table-success table-striped-columns table-hover">
        <thead>
        <tr>
            <th scope="col">id</th>
            <th scope="col">Name</th>
            <th scope="col">Country</th>
            <th scope="col">Founded</th>
            <th scope="col"></th>
        </tr>
        </thead>
        <tbody>
        <% magicSchools.forEach(magicSchool => { %>
            <tr>
                <th scope="row"><%= magicSchool.id%></th>
                <td><%= magicSchool.name %></td>
                <td> <%= magicSchool.country %></td>
                <td> <%= magicSchool.founded %></td>
                <td width="105">
                    <a href="/magic_school/update/<%= magicSchool.id %>" class="btn" role="button">
                        <i class="fa-solid fa-pen"></i></a>
                     <a onclick="confirm_delete('/magic_school/delete/<%= magicSchool.id %>',`<%= magicSchool.name %>`)"
                        class="btn" role="button"><i class="fa-solid fa-trash-can"></i></a>
                </td>
            </tr>
        <% }); %>
        </tbody>
    </table>

    <a class="btn btn-secondary" href="/magic_school/create">Create magic school</a>
</div>
<%- include ("../scripts.ejs") %>
<script>
    function confirm_delete(link, name) {
        alertify.confirm('Confirmation', 'Delete school <b>' + name + '</b> ?',
            function () {
                window.location.href = link
            },
            function () {
            }).set({labels: {ok: 'Yes', cancel: 'No'}});
        return false;
    }
</script>
</body>
</html>
